---
import aqidaIcon from "../assets/akida.png";
import seeraIcon from "../assets/seera.png";
import tareekhIcon from "../assets/tareekh.png";
import hadithIcon from "../assets/hadith.svg";
import type { translations } from "../i18n/translations";

type TranslationObject = (typeof translations)[keyof typeof translations];

interface Props {
  locale: "ar" | "en" | "fr";
  arabicUrl: string;
  englishUrl: string;
  frenchUrl: string;
  t: TranslationObject;
}

const { locale, arabicUrl, englishUrl, frenchUrl, t } = Astro.props;

const isArabic = locale === "ar";

const topicsData = [
  {
    id: "aqida",
    icon: aqidaIcon,
    nameKey: "aqida" as keyof TranslationObject,
    descKey: "aqidaDesc" as keyof TranslationObject,
    comingSoon: true,
  },
  {
    id: "seera",
    icon: seeraIcon,
    nameKey: "seera" as keyof TranslationObject,
    descKey: "seeraDesc" as keyof TranslationObject,
    comingSoon: false,
  },
  {
    id: "hadith",
    icon: hadithIcon,
    nameKey: "hadith" as keyof TranslationObject,
    descKey: "hadithDesc" as keyof TranslationObject,
    comingSoon: locale === "fr", // Hadith available in Arabic and English only
  },
  {
    id: "history",
    icon: tareekhIcon,
    nameKey: "tareekh" as keyof TranslationObject,
    descKey: "tareekhDesc" as keyof TranslationObject,
    comingSoon: true,
  },
];

const comingSoonText = isArabic ? "ŸÇÿ±Ÿäÿ®ÿßŸã" : locale === "fr" ? "Bient√¥t" : "Coming Soon";

const getTopicLink = (topicId: string) => {
  if (isArabic) {
    return `/${topicId}`;
  }
  if (locale === "fr") {
    return `/fr/${topicId}`;
  }
  return `/en/${topicId}`;
};
---

<div
  data-component="home-page"
  class="min-h-screen p-6 md:p-8 relative overflow-hidden"
>
  <header
    data-component="header"
    class={`flex justify-between items-center mb-10 relative z-10 flex-col md:flex-row gap-6 md:gap-0 text-center ${isArabic ? "md:text-right" : "md:text-left"}`}
  >
    <div class={`order-2 ${isArabic ? "md:order-1" : "md:order-1"}`}>
      <h1 class="text-3xl md:text-4xl font-bold text-amber-400/90 m-0">
        {t.title}
      </h1>
      <p class="text-base md:text-lg text-gray-400 mt-2 font-medium">
        {t.subtitle}
      </p>
    </div>

    <div class={`relative order-1 ${isArabic ? "md:order-2" : "md:order-2"}`}>
      <select
        data-component="language-selector"
        class="px-5 py-3 border border-gray-700 rounded-lg bg-[#1a1f2e] text-gray-300 font-medium cursor-pointer transition-all duration-300 hover:border-amber-700/50 focus:outline-none focus:border-amber-600 appearance-none text-center min-w-[120px]"
        onchange="window.location.href = this.value"
      >
        <option value={arabicUrl} selected={locale === "ar"}>ÿßŸÑÿπÿ±ÿ®Ÿäÿ©</option>
        <option value={englishUrl} selected={locale === "en"}>English</option>
        <option value={frenchUrl} selected={locale === "fr"}>Fran√ßais</option>
      </select>
    </div>
  </header>

  <main data-component="main-content" class="relative z-10">
    <section data-component="topics-section" class="mb-12">
      <div
        data-component="topics-grid"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 mb-10"
      >
        {topicsData.map((topic) => (
          topic.comingSoon ? (
            <div
              class="topic-card relative bg-[#1a1f2e] rounded-xl p-6 text-center border border-gray-700/50 overflow-hidden cursor-not-allowed"
            >
              {/* Coming Soon Banner */}
              <div class="absolute top-0 left-0 right-0 bg-gradient-to-r from-emerald-600 to-teal-600 py-1.5 px-3">
                <span class="text-white text-xs font-semibold tracking-wide">
                  {comingSoonText}
                </span>
              </div>

              {/* Overlay */}
              <div class="absolute inset-0 bg-[#0f1319]/60 backdrop-blur-[1px] z-10 flex items-center justify-center">
                <div class="bg-[#1a1f2e]/90 rounded-lg px-4 py-2 border border-gray-600/50">
                  <span class="text-gray-300 text-sm font-medium">{comingSoonText}</span>
                </div>
              </div>

              <div class="mt-4 opacity-50">
                <div class="topic-icon w-16 h-16 mx-auto mb-4 rounded-xl bg-[#252b3b] flex items-center justify-center">
                  <img
                    src={topic.icon.src}
                    alt={t[topic.nameKey]}
                    width={40}
                    height={40}
                    class="object-contain grayscale"
                  />
                </div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  {t[topic.nameKey]}
                </h3>
                <p class="text-gray-500 text-sm leading-relaxed">
                  {t[topic.descKey]}
                </p>
              </div>
            </div>
          ) : (
            <a
              href={getTopicLink(topic.id)}
              class="topic-card bg-[#1a1f2e] rounded-xl p-6 text-center border border-gray-700/50 transition-all duration-300 cursor-pointer hover:border-amber-700/50 hover:-translate-y-1 group"
            >
              <div class="topic-icon w-16 h-16 mx-auto mb-4 rounded-xl bg-[#252b3b] flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
                <img
                  src={topic.icon.src}
                  alt={t[topic.nameKey]}
                  width={40}
                  height={40}
                  class="object-contain"
                />
              </div>
              <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-amber-400 transition-colors">
                {t[topic.nameKey]}
              </h3>
              <p class="text-gray-500 text-sm leading-relaxed">
                {t[topic.descKey]}
              </p>
            </a>
          )
        ))}
      </div>
    </section>

    <section data-component="description-section">
      <div class="bg-[#1a1f2e] rounded-xl p-8 md:p-12 border border-amber-700/30 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-6 text-amber-400/90">
          {t.welcomeTitle}
        </h2>
        <p class="text-base text-gray-400 leading-relaxed mb-8 max-w-3xl mx-auto">
          {t.welcomeText}
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
          <div class="flex items-center gap-2 bg-[#252b3b] px-5 py-3 rounded-lg text-gray-300 border border-gray-700/50">
            <span class="text-lg">üìö</span>
            <span class="text-sm">{t.feature1}</span>
          </div>
          <div class="flex items-center gap-2 bg-[#252b3b] px-5 py-3 rounded-lg text-gray-300 border border-gray-700/50">
            <span class="text-lg">üéì</span>
            <span class="text-sm">{t.feature2}</span>
          </div>
          <div class="flex items-center gap-2 bg-[#252b3b] px-5 py-3 rounded-lg text-gray-300 border border-gray-700/50">
            <span class="text-lg">üåç</span>
            <span class="text-sm">{t.feature3}</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
