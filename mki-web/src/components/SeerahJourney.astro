---
import type { translations } from '../i18n/translations.ts';
import { getLocalizedEvents } from '../data/d1SeerahService.ts';
import SeerahInteractivity from './SeerahInteractivity.tsx';

type TranslationObject = (typeof translations)[keyof typeof translations];

interface Props {
  t: TranslationObject;
  locale?: 'ar' | 'en' | 'fr';
}

const { t, locale = 'en' } = Astro.props;
const homeUrl = locale === 'ar' ? '/' : locale === 'fr' ? '/fr/' : '/en/';
const arabicUrl = '/seera';
const englishUrl = '/en/seera';
const frenchUrl = '/fr/seera';

// Get D1 database from Astro locals
const db = Astro.locals.runtime.env.DB;

// Get initial data server-side from D1
const events = await getLocalizedEvents(db, locale);
const sortedEvents = [...events].sort((a, b) => {
  const yearA = parseInt(a.year.match(/\d+/)?.[0] || '0');
  const yearB = parseInt(b.year.match(/\d+/)?.[0] || '0');
  if (yearA !== yearB) return yearA - yearB;
  return a.id - b.id;
});

// Default to first event
const initialEvent = sortedEvents[0] || null;
---

<div class="h-screen flex flex-col bg-[#0f1319]">
  <!-- Header Bar -->
  <header class="bg-[#1a1f2e] border-b border-gray-700/50 px-4 py-2 flex-shrink-0">
    <div class="flex justify-between items-center">
      <a
        href={homeUrl}
        class="inline-flex items-center gap-2 text-gray-300 hover:text-amber-400 transition-colors text-sm"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        {locale === 'ar' ? 'الرئيسية' : locale === 'fr' ? 'Accueil' : 'Home'}
      </a>

      <div class="text-center">
        <h1 class="text-lg font-bold text-white">
          {t.seerahJourneyTitle}
        </h1>
      </div>

      <select
        class="px-2 py-1 border border-gray-700 rounded bg-[#0f1319] text-gray-300 text-sm cursor-pointer hover:border-amber-600 focus:outline-none"
        onchange="window.location.href = this.value"
      >
        <option value={arabicUrl} selected={locale === 'ar'}>العربية</option>
        <option value={englishUrl} selected={locale === 'en'}>English</option>
        <option value={frenchUrl} selected={locale === 'fr'}>Français</option>
      </select>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow flex flex-col overflow-hidden">
    <SeerahInteractivity
      client:visible
      sortedEvents={sortedEvents}
      initialEventId={initialEvent?.id || null}
      locale={locale}
    />
  </main>
</div>
